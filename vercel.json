{
    "version": 2,
    
    "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
    ],
    "routes": [
      { "handle": "filesystem" },
      {
        "src": "/static/(.*)",
        "dest": "/build/static/$1"
      },

      {
        "src": "/index.html",
        "dest": "/public/index.html"
      },
      {
        "src": "/(.*)",
        "dest": "/public/index.html"
      }
    ]
  }